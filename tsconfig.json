{
  "compilerOptions": {
    "module": "commonjs",                      // Must match moduleResolution for Node ESM
    "moduleResolution": "Node",           // Node.js ESM resolution
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",                            // Base for absolute imports
    "paths": {
      "@root/*": ["*"],      
     "@src/*": ["src/*"]                   // All absolute imports start with src
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
